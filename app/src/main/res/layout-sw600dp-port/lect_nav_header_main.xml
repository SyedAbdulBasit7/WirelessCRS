<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="?attr/colorPrimaryDark"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/nav_header_margin_bottom"
    android:paddingLeft="@dimen/nav_header_padding"
    android:paddingRight="@dimen/nav_header_padding"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:layout_marginTop="@dimen/status_bar_size">

    <ImageView
        android:id="@+id/lect_imageView"
        android:layout_width="?android:attr/actionBarSize"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@mipmap/ic_launcher"
        android:contentDescription="@string/a11y_desc_logo" />

    <TextView
        android:id="@+id/lect_currentDirectoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/loading"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/lect_diskUsage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/lect_currentDirectoryTextView"
        android:layout_alignParentStart="true"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
</RelativeLayout>

